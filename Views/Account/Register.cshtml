@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
	<div class="col-4 offset-4">
		<h2>Register</h2>
	</div>
</div>

<div class="row">
	<div class="col">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<div class="form-group">
				<label asp-for="Username">Username</label>
				<input asp-for="Username" asp-for="Username" />
				<span asp-validation-for="Username" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Fullname">Fullname</label>
				<input asp-for="Fullname" asp-for="Fullname" />
				<span asp-validation-for="Fullname" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password">Password</label>
				<input asp-for="Password" asp-for="Password" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ConfirmPassword">Confirm Password</label>
				<input asp-for="ConfirmPassword" asp-for="ConfirmPassword" type="password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-group d-grid mb-3">
				<button type="submit" class="btn btn-primary">Register</button>
			</div>
		</form>
</div>
</div>
	
	
